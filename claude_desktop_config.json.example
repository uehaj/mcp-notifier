{
  "mcpServers": {
    "mcp-notifier-direct": {
      "command": "node",
      "args": [
        "-e",
        "import('@uehaj/mcp-notifier/build/index.js')"
      ],
      "_comment": "Method 1: Run the notifier directly from published package"
    },
    "mcp-notifier-clone": {
      "command": "node",
      "args": [
        "/path/to/your/cloned/mcp-notifier/build/index.js"
      ],
      "_comment": "Method 2: Run the notifier using local build from git clone (replace with your actual path)"
    }
  }
}
