{
  "mcpServers": {
    "mcp-notifier": {
      "command": "npx",
      "args": [
        "@uehaj/mcp-notifier"
      ],
      "_comment": "Starts the notifier MCP server using NPM package."
    },
    "mcp-notifier-local": {
      "command": "node",
